<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
    <id value="ch-core-epr-consent"/>
    <url value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-epr-consent"/>
    <version value="2.0.0"/>
    <name value="CHCoreEPRConsent"/>
    <title value="CH Core EPR-Consent"/>
    <status value="active"/>
    <date value="2021-01-27T00:00:00+00:00"/>
    <publisher value="HL7 Switzerland"/>
    <contact>
        <name value="HL7 Switzerland"/>
        <telecom>
            <system value="url"/>
            <value value="https://www.hl7.ch/"/>
        </telecom>
    </contact>
    <description value="Base profile for a consent profile to document that a patient has an Electronic Patient Record (EPR) in Switzerland. The actual consent conditions are held within the EPR, this consent is the documentation in an organization that the patient has stated he has an EPR and this needs to be verified at the time of document publishing or reading. In addition a patient can request that specific information will not be published from the organization to the EPR. This can be documented with one or more references to encounters to exclude the consent for these."/>
    <jurisdiction>
        <coding>
            <system value="urn:iso:std:iso:3166"/>
            <code value="CH"/>
        </coding>
    </jurisdiction>
    <fhirVersion value="4.3.0"/>
    <kind value="resource" />
    <abstract value="false" />
    <type value="Consent" />
    <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Consent" />
    <derivation value="constraint" />
    <differential>
        <element id="Consent">
            <path value="Consent"/>
            <short value="CH Core EPR-Consent"/>
        </element>
        <element id="Consent.scope">
            <path value="Consent.scope"/>
            <patternCodeableConcept>
                <coding>
                    <system value="http://terminology.hl7.org/CodeSystem/consentscope"/>
                    <code value="patient-privacy"/>
                    <display value="Privacy Consent"/>
                </coding>
            </patternCodeableConcept>
        </element>

        <element id="Consent.category">
            <path value="Consent.category"/>
            <slicing>
                <discriminator>
                    <type value="value"/>
                    <path value="coding.code"/>
                </discriminator>
                <discriminator>
                    <type value="value"/>
                    <path value="coding.system"/>
                </discriminator>
                <discriminator>
                    <type value="value"/>
                    <path value="coding.display"/>
                </discriminator>
                <ordered value="false"/>
                <rules value="open"/>
            </slicing>
        </element>
        <element id="Consent.category:VSCat">
            <path value="Consent.category"/>
            <sliceName value="VSCat"/>
            <min value="1"/>
            <max value="1"/>
        </element>
        <element id="Consent.category:VSCat.coding">
            <path value="Consent.category.coding"/>
            <min value="1"/>
        </element>
        <element id="Consent.category:VSCat.coding.system">
            <path value="Consent.category.coding.system"/>
            <min value="1"/>
            <max value="1"/>
            <fixedUri value="http://terminology.hl7.org/CodeSystem/v3-ActCode"/>
        </element>
        <element id="Consent.category:VSCat.coding.code">
            <path value="Consent.category.coding.code"/>
            <min value="1"/>
            <max value="1"/>
            <fixedCode value="IDSCL"/>
        </element>
        <element id="Consent.category:VSCat.coding.display">
            <path value="Consent.category.coding.display"/>
            <min value="1"/>
            <max value="1"/>
            <fixedString value="information disclosure"/>
        </element>

        <element id="Consent.patient">
            <path value="Consent.patient"/>
            <short value="The patient to whom this EPR consent applies"/>
            <min value="1"/>
            <type>
                <code value="Reference"/>
                <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-patient"/>
            </type>
        </element>
        <element id="Consent.performer">
            <path value="Consent.performer"/>
            <type>
                <code value="Reference"/>
                <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-organization"/>
                <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-patient"/>
                <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-practitioner"/>
                <targetProfile value="http://hl7.org/fhir/StructureDefinition/RelatedPerson"/>
                <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-practitionerrole"/>
            </type>
        </element>
        <element id="Consent.organization">
            <path value="Consent.organization"/>
            <type>
                <code value="Reference"/>
                <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-organization"/>
            </type>
        </element>
        <element id="Consent.policyRule">
            <path value="Consent.policyRule"/>
            <patternCodeableConcept>
                <coding>
                    <system value="http://terminology.hl7.org/CodeSystem/consentpolicycodes"/>
                    <code value="ch-epr"/>
                </coding>
            </patternCodeableConcept>
        </element>
        <element id="Consent.provision">
            <path value="Consent.provision"/>
            <short value="Exceptions to the EPR consent"/>
        </element>
        <element id="Consent.provision.type">
            <path value="Consent.provision.type"/>
            <short value="deny"/>
            <definition value="Encounters can be added here where the consent for the EPR does not apply."/>
            <min value="1"/>
            <fixedCode value="deny" />
        </element>
        <element id="Consent.provision.data">
            <path value="Consent.provision.data"/>
        </element>
        <element id="Consent.provision.data.meaning">
            <path value="Consent.provision.data.meaning"/>
            <fixedCode value="instance" />
        </element>
        <element id="Consent.provision.data.reference">
            <path value="Consent.provision.data.reference"/>
            <short value="Excluded encounter for EPR"/>
            <definition value="A reference to the encounter where the consent for the EPR does not apply."/>
            <type>
                <code value="Reference"/>
                <targetProfile value="http://fhir.ch/ig/ch-core/StructureDefinition/ch-core-encounter"/>
            </type>
        </element>
    </differential>
</StructureDefinition>